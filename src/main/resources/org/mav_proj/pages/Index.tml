<html t:type="layout" title="newapp com.example"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">

<div class="row">
    <div class="span4 offset3">
        <t:form t:id="loginForm">

            <t:errors/>

            <h2>Please sign in</h2>
            <t:label for="userName">User Name</t:label>
             <t:textfield t:id="userName" t:validate="required" />
            <t:label for="password"></t:label>
            <t:passwordfield t:id="password"  t:validate="required" />
            <t:submit t:id="sub" class="btn btn-large btn-primary" value="Sign in"/>
        </t:form>
    </div>
</div>

</html>